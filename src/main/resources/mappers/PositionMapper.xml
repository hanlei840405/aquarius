<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.galaxy.framework.aquarius.mapper.PositionMapper">
    <select id="findByCodes" resultType="com.galaxy.framework.aquarius.entity.Position">
        SELECT *
        FROM sys_position WHERE code IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
    <select id="selectByDepartment" resultType="com.galaxy.framework.aquarius.entity.Position"
            parameterType="map">
        SELECT * FROM sys_position WHERE department_code=#{departmentCode}
        <if test="status != null">
            AND status=#{status}
        </if>
    </select>
    <select id="selectByParent" resultType="com.galaxy.framework.aquarius.entity.Position"
            parameterType="map">
        SELECT * FROM sys_position WHERE parent_code IN
        <foreach item="item" index="index" collection="parentCodes" open="(" separator="," close=")">
            #{item}
        </foreach>
        <if test="status != null">
            AND status=#{status}
        </if>
    </select>
</mapper>